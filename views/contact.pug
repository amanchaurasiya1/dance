extends base.pug

block scripts 
    script(src="index.js")
block style
    style 
        include ../static/index.css
        include ../static/contact.css
block content 
    div.container
        div.box
            h1 REGISTER NOW !
            form(action="/contact", method="post")
                label(for="name")
                | Name: 
                input(type="text",name = "name" , class="info" ,id="name",placeholder="Enter your name") 
                label(for="age")
                | Age: 
                input(type="number",name = "age" , class="info" ,id="age",placeholder="Enter your age") 
                label(for="email")
                | Email: 
                input(type="email",name = "email" , class="info" ,id="email",placeholder="Enter your email") 
                label(for="mobile")
                | Mobile No.: 
                input(type="number",name = "mobile" , class="info" ,id="mobile",placeholder="Enter your Mobile Number")  
                button(type="submit",text="submit",id="submitbtn")|Submit 

